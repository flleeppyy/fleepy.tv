{
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "proseWrap": "always",
  "quoteProps": "consistent",
  "trailingComma": "all",
  "printWidth": 120,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "useTabs": false,
  "overrides": [
    {
      "files": "*.ejs",
      "options": {
        "parser": "html"
      }
    }
  ]
}